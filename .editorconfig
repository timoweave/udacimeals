[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.html]
charset = utf-8
indent_style = space
indent_size = 4

[*.js]
charset = utf-8
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab

[*.json]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
